{
  "name": "rescript-snippets",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "build": "rescript",
    "clean": "rescript clean -with-deps",
    "start": "rescript build -w",
    "test": "jest",
    "test_retest": "NODE_OPTIONS=--experimental-vm-modules retest __tests__/*.mjs",
    "test99": "npx nodemon --exec NODE_OPTIONS=--experimental-vm-modules retest src/Problems_in_OCaml/*_Test.mjs",
    "runparsercomb1": "npx nodemon --exec node src/fsharpforfunandprofit/understanding_parser_combinators/Ch1_Parser_Combinator_Intro.mjs",
    "runparsercomb2": "npx nodemon --exec node src/fsharpforfunandprofit/understanding_parser_combinators/Ch2_Userful_Parser_Combinators.mjs",
    "runparsercomb3": "npx nodemon --exec node src/fsharpforfunandprofit/understanding_parser_combinators/Ch3_Improving_Parser_Library.mjs"
  },
  "fig": {
    "test": {
      "description": "Run all tests",
      "icon": "üß™",
      "priority": 100
    },
    "build": {
      "description": "Build the project",
      "icon": "üõ†"
    },
    "start": {
      "description": "Start watching and building project",
      "icon": "‚≠êÔ∏è"
    },
    "clean": {
      "description": "Clean the project",
      "icon": "üõÄ"
    }
  },
  "keywords": [
    "rescript"
  ],
  "author": "",
  "license": "MIT",
  "jest": {
    "testMatch": [
      "<rootDir>/**/**/*.test.(js|mjs|jsx|ts|tsx)",
      "<rootDir>/**/__tests__/*_Test.mjs"
    ],
    "transform": {
      "^.+\\.m?jsx?$": "@swc/jest"
    },
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/(?!(rescript|@glennsl/rescript-jest|@ryyppy/rescript-promise|rationale)/)"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "mjs"
    ]
  },
  "devDependencies": {
    "@glennsl/bs-jest": "*",
    "@glennsl/rescript-jest": "^0.9.1",
    "@swc/core": "^1.2.244",
    "@swc/jest": "^0.2.22",
    "bs-bastet": "^2.0.0",
    "esbuild-jest": "^0.5.0",
    "jest": "^29.0.0",
    "relude": "^0.66.1",
    "rescript": "^9.1.4",
    "rescript-test": "latest"
  },
  "dependencies": {
    "@glennsl/bs-json": "^5.0.4",
    "@mobily/rescript-date": "^2.1.0",
    "@ryyppy/rescript-promise": "latest",
    "add": "^2.0.6",
    "bs-fetch": "^0.6.2",
    "d3": "^7.6.1",
    "isomorphic-fetch": "^3.0.0",
    "nodemon": "^2.0.19",
    "rescript-js": "^0.7.0",
    "rescript-jzon": "latest",
    "rescript-nodejs": "^14.3.0",
    "rescript-ocamlgraph": "github:dsiu/rescript-ocamlgraph#main"
  }
}
